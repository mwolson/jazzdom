{
  "name": "jazzdom",
  "version": "0.5.1",
  "description": "Promisified jsdom setup and teardown for your test runner.",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s build:clean build:js",
    "build:clean": "rimraf lib",
    "build:js": "babel --ignore \"*.test.js\" -d lib/ src/",
    "coverage": "run-s coverage:test coverage:report",
    "coverage:report": "nyc report --reporter=text-lcov | coveralls",
    "coverage:test": "nyc mocha",
    "coverage:travis": "run-s coverage:test coverage:travis:report",
    "coverage:travis:report": "if-node-version ^6 run-s coverage:report",
    "lint": "eslint src test --ext .js",
    "lint:fix": "eslint src test --ext .js --fix",
    "prepublish": "run-s lint test build",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mwolson/jazzdom.git"
  },
  "author": "Michael Olson <me@mwolson.org>",
  "license": "MIT",
  "keywords": [
    "jest",
    "mocha",
    "jsdom",
    "dom",
    "test"
  ],
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.test.js"
    ],
    "cache": false
  },
  "peerDependencies": {
    "jsdom": "*",
    "jsdom-global": "*"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "cheerio": "^0.22.0",
    "coveralls": "^2.12.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.16.1",
    "eslint-plugin-react": "^6.10.3",
    "if-node-version": "^1.1.1",
    "jsdom": "^9.12.0",
    "jsdom-global": "^2.1.1",
    "mocha": "^3.2.0",
    "mocha-clean": "^1.0.0",
    "mocha-lcov-reporter": "^1.0.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.1.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "testdouble": "^2.0.3",
    "testdouble-chai": "^0.5.0"
  }
}
